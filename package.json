    "prettier": "^2.8.2",
    "jest": "^29.3.1",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "rimraf": "^4.0.4",
    "husky": "^8.0.3",
    "typescript": "^4.9.3"
  }
