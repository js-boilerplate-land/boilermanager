{
  "compilerOptions": {
    "target": "ES2016",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "declaration": true,
    "esModuleInterop": true,
    "rootDir": ".",
    "outDir": "./lib",
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": [
    "ignore",
    "node_modules",
    "lib",
    "scripts",
    "tests"
  ]
}
