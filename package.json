  "scripts": {
    "prepare": "husky install",
    "precommit": "npm run script:issues",
    "commit": "cz",
    "prebuild": "rimraf ./lib",
    "build": "tsc",
    "build:check": "tsc --noEmit",
    "pub": "semantic-release",
    "pub:check": "npm publish --dry-run",
    "pub:build": "npm pack && tar -xvzf *.tgz",
    "start": "node ./lib/src/index.js",
    "dev": "ts-node ./src/index.ts -f \"/home/lucas/Desktop/projects/2 - open source projects/boilermanager-boilerplates/boilerplates\"",
    "dev:install": "npm install -g .",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --passWithNoTests --watchAll",
    "test:coverage": "jest --passWithNoTests --coverage",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "lint:check": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:staged": "lint-staged --concurrent false --quiet",
    "script:gitmoji": "ts-node ./scripts/gitmoji-setup.ts",
    "script:issues": "ts-node ./scripts/github-issues.ts"
  },
  "dependencies": {
    "axios": "^1.2.2",
