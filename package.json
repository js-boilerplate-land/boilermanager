{
  "name": "boilermanager",
  "version": "0.0.2",
  "description": "âš¡ a boilerplate manager to start you typescript projects lightning fast.",
  "license": "MIT",
  "keywords": [
    "cli",
    "typescript",
    "boilerplate-manager",
    "boilerplate"
  ],
  "homepage": "https://github.com/js-boilerplate-land/boilermanager",
  "repository": {
    "type": "git",
    "url": "https://github.com/js-boilerplate-land/boilermanager.git"
  },
  "author": {
    "name": "Lucas Vieira",
    "email": "lucasvtiradentes@gmail.com"
  },
  "bugs": {
    "url": "https://github.com/js-boilerplate-land/boilermanager/issues"
  },
  "exports": "./lib/src/index.js",
  "bin": {
    "bpm": "./lib/src/index.js"
  },
  "scripts": {
    "postinstall": "husky install",
    "commit": "cz",
    "commit:configs": "ts-node ./scripts/update-commits-configs.ts",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "lint:check": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:staged": "lint-staged --concurrent false --quiet",
    "build": "tsc",
    "dev": "ts-node ./src/index.ts",
    "start": "node ./lib/src/index.js",
    "test": "bash ./scripts/test-commands.sh",
    "sc": "ts-node ./scripts/scrapper.ts"
  },
  "dependencies": {
    "axios": "^1.2.2",
    "chalk": "^4.1.2",
    "commander": "^9.5.0",
    "dotenv": "^16.0.3",
    "figlet": "^1.5.2",
    "inquirer": "^8.2.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@types/figlet": "^1.5.5",
    "@types/inquirer": "^9.0.3",
    "@types/node": "^18.11.9",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "commitizen": "^4.2.6",
    "commitizen-emoji": "^1.0.5",
    "commitlint": "^17.4.1",
    "commitlint-config-gitmoji": "^2.2.9",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3"
  }
}
