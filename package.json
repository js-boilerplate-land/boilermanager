{
  "name": "boilermanager",
  "version": "1.0.0",
  "description": "This is node boilerplate that uses eslint, prettier, editor config and typescript.",
  "license": "MIT",
  "type": "module",
  "keywords": [
    "cli",
    "tailwindcss",
    "nodejs"
  ],
  "homepage": "https://github.com/js-boilerplate-land/boilermanager",
  "repository": {
    "type": "git",
    "url": "https://github.com/js-boilerplate-land/boilermanager.git"
  },
  "author": {
    "name": "Lucas Vieira",
    "email": "lucasvtiradentes@gmail.com"
  },
  "bugs": {
    "url": "https://github.com/js-boilerplate-land/boilermanager/issues"
  },
  "exports": "./lib/index.js",
  "bin": {
    "bpm": "./lib/index.js"
  },
  "scripts": {
    "postinstall": "git init && husky install",
    "commit": "cz",
    "commit:configs": "ts-node --esm ./scripts/update-commits-configs.ts",
    "build": "tsc",
    "dev": "ts-node --esm ./src/index.ts",
    "start": "node ./lib/index.js",
    "lint:staged": "lint-staged --concurrent false --quiet"
  },
  "dependencies": {
    "axios": "^1.2.2",
    "chalk": "^5.2.0",
    "commander": "^9.5.0",
    "figlet": "^1.5.2",
    "inquirer": "^9.1.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@types/figlet": "^1.5.5",
    "@types/inquirer": "^9.0.3",
    "@types/node": "^18.11.9",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "commitizen": "^4.2.6",
    "commitizen-emoji": "^1.0.5",
    "commitlint": "^17.4.1",
    "commitlint-config-gitmoji": "^2.2.9",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3"
  }
}
